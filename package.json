{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Typescript boilerplate project",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "start:dev": "nodemon -e ts --exec 'ts-node --files ./index.ts",
    "build": "tsc",
    "test": "npm t",
    "lint": "eslint --fix . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konfortes/ts-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "eslint",
    "tslint"
  ],
  "author": "k7s",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/konfortes/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/konfortes/ts-boilerplate#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
